<p id="notice"><%= notice %></p>

<div class="col-xs-10">
  
  <div class="float-xs-right range-query">
    <h1>Listing invoices</h1>
    <%= form_tag invoices_path, class:"form-inline", method: :get do %>
      <div class="form-group">
      <%= text_field_tag 'search[date_from]', @search.date_from, class:"form-control" %>
      <%= text_field_tag 'search[date_to]', @search.date_to, class:"form-control" %>
      <%= submit_tag 'Search', class:"btn btn-success" %>
      </div>
    <% end %>
   </div>
</div>

<br>
<div class="clearfix"></div>
<br>
<div>
<h1>Invoices</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Customer</th>
      <th>Tax</th>
      <th>Vendor</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.date.strftime "%d-%m-%Y %H:%M:%S" %></td>
        <td><%= invoice.customer %></td>
        <td><%= invoice.tax %></td>
        <td><%= invoice.vendor %></td>
        <td><%= invoice.status_type %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invoice', new_invoice_path, class:"btn btn-primary" %>
</div>